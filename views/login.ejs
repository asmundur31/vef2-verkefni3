<%- include('header') -%>

<h1 class="header header--1">Innskráning</h1>

<form class="form" method="post" action="/admin/login">
  <div class="form__row">
    <label class="form__label" for="username">Notendanafn:</label>
    <input class="form__input" type="text" name="username" id="username">
  </div>
  <div class="form__row">
    <label class="form__label" for="password">Lykilorð:</label>
    <input class="form__input" type="password" name="password" id="password">
  </div>
  
  <p class="error__text"><%= message %></p>
  
  <button class="form__button">Innskrá</button>
</form>

<a href="/">Til baka</a>

<%- include('footer') -%>
